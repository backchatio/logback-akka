<configuration>
 
  <appender name="STR_LIST"
    class="com.mojolly.logback.StringListAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%message</Pattern>
    </layout>
  </appender>

  <appender name="ACTOR" class="com.mojolly.logback.ActorAppender">
   <!--<param name="IncludeCallerData" value="true"/> &lt;!&ndash; Default is false &ndash;&gt;-->
   <appender-ref ref="STR_LIST"/>
  </appender>

  <root>
    <level value="DEBUG"/>
    <appender-ref ref="ACTOR"/>
  </root>

</configuration>